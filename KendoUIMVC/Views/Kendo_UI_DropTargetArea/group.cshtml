@{
    ViewBag.Title = "group";
}

<h2>group</h2>

<p>Area accepts only draggable elements from orange group</p>
<div id="area">
    <div id="leftArea"></div>
    <div id="rightArea"></div>
</div>
<div class="orange"></div>
<div class="orange"></div>
<div class="purple"></div>

<script>
    $(".orange").kendoDraggable({
        group: "orangeGroup",
        hint: function (element) {
            return element.clone();
        }
    });

    $(".purple").kendoDraggable({
        group: "purpleGroup",
        hint: function (element) {
            return element.clone();
        }
    });

    $("#area").kendoDropTargetArea({
        group: "orangeGroup",
        filter: "#leftArea, #rightArea",
        drop: onDrop
    });

    function onDrop(e) {
        e.draggable.destroy();
        e.draggable.element.css("opacity", 0.3);
    }
</script>
<style>
    .orange, .purple {
        width: 50px;
        height: 50px;
        border: 2px solid green;
        margin: 5px;
        display: inline-block;
    }

    .orange {
        background-color: orange;
    }

    .purple {
        background-color: purple;
    }

    #area {
        width: 300px;
        height: 300px;
        line-height: 300px;
        background-color: gray;
    }

    #leftArea, #rightArea {
        width: 140px;
        height: 100px;
        border: 2px solid green;
        margin: 2px;
        background-color: orange;
        display: inline-block;
        vertical-align: middle;
    }
</style>