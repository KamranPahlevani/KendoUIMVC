@{
    ViewBag.Title = "modify_the_day_slot_based_on_resources";
}

<h2>modify_the_day_slot_based_on_resources</h2>

<div id="scheduler"></div>
<script id="dayTemplate" type="text/x-kendo-template">
    # var resources = data.resources(); #
    # var color = resources.roomId === 1 ? "red" : "blue"; #

    <span style="height:100%; background: #=color#">
        #=kendo.toString(date, "d")#
    </span>
</script>
<script>
    $("#scheduler").kendoScheduler({
        date: new Date("2013/6/6"),
        views: [{
            type: "month",
            dayTemplate: kendo.template($("#dayTemplate").html())
        }],
        group: {
            resources: ["Rooms"]
        },
        resources: [
          {
              field: "roomId",
              name: "Rooms",
              dataSource: [
                { text: "Meeting Room 101", value: 1, color: "#6eb3fa" },
                { text: "Meeting Room 201", value: 2, color: "#f58a8a" }
              ],
              title: "Room"
          }
        ]
    });
</script>