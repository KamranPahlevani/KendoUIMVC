    {
      id: 1,
      start: new Date("2013/6/6 08:00 AM"),
      end: new Date("2013/6/6 09:00 AM"),
      title: "Interview"
    }
  ],
  edit: function(e) {
    console.log("Editing", e.event.title);
  }
});
</script>