@{
    ViewBag.Title = "set_appendTo_as_a_selector_string";
}

<h2>set_appendTo_as_a_selector_string</h2>

<span id="notification"></span>
<div id="container"></div>
<script>
    $("#notification").kendoNotification({
        appendTo: "#container"
    });
    $('#notification').data('kendoNotification').show('Test notification');
</script>