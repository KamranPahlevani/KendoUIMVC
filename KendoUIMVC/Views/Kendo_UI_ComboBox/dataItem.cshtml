@{
    ViewBag.Title = "dataItem";
}

<h2>dataItem</h2>

<input type="text" id="comboBox" name="comboBox" />
<input type="button" id="btnDataItem" value="Get Data Item"/>


<script>
    $("#comboBox").kendoComboBox({
        dataSource: new kendo.data.DataSource({
            transport: {
                read: {
                    url: "@Url.Action("GetProducts", "Kendo_Data_DataSource")",
                    dataType: "json"
                },
            }
        }),
        dataTextField: "ProductName",
    });

    $('#btnDataItem').click(function () {
        var combobox = $("#comboBox").data("kendoComboBox");

        // get the dataItem corresponding to the selectedIndex.
        var dataItem = combobox.dataItem();

        // get the dataItem corresponding to the passed index.
        var dataItem = combobox.dataItem(1);
    })

</script>


