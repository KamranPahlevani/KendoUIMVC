@{
    ViewBag.Title = "delay";
}

<h2>delay</h2>

<input type="text" id="comboBox" name="comboBox" />

<script>
    $("#comboBox").kendoComboBox({
        dataSource: new kendo.data.DataSource({
            transport: {
                read: {
                    url: "@Url.Action("GetProducts", "Kendo_Data_DataSource")",
                    dataType: "json"
                },
            }
        }),
        dataTextField: "ProductName",
        dataValueField: "ProductID",
        filter: "startswith",
        delay: 3000
    })
</script>


