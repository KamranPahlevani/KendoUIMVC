    ViewBag.Title = "close_event_To_set_after_initialization";
}

<h2>close_event_To_set_after_initialization</h2>

<div id="target">Target</div>
<ul id="context-menu">
    <li>
        Item 1
        <ul>
            <li>Sub Item 1</li>
            <li>Sub Item 2</li>
            <li>Sub Item 3</li>
        </ul>
    </li>
    <li>
        Item 2
        <ul>
            <li>Sub Item 1</li>
            <li>Sub Item 2</li>
            <li>Sub Item 3</li>
        </ul>
    </li>
</ul>
<script>
    // initialize the ContextMenu
    $("#context-menu").kendoContextMenu({
        target: "#target"
    });
    // get a reference to the ContextMenu widget
    var contextMenu = $("#context-menu").data("kendoContextMenu");
    // bind to the close event
    contextMenu.bind("close", function (e) {
        alert('close event is fired!')
    });
</script>