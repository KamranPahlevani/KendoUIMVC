@{
    ViewBag.Title = "save_changes";
}

<h2>save_changes</h2>

<div id="grid"></div>
<input type="button" id="btnSaveChanges" value="Save Changes"/>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: {
            data: [
              { id: 1, name: "Jane Doe", age: 30 },
              { id: 2, name: "John Doe", age: 33 }
            ],
            schema: {
                model: { id: "id" }
            }
        },
        editable: true
    });

    $('#btnSaveChanges').click(function () {
        var grid = $("#grid").data("kendoGrid");
        grid.addRow();
        grid.saveChanges();
    })
</script>
