@{
    ViewBag.Title = "allow_multiple_column_sorting";
}

<h2>allow_multiple_column_sorting</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ],
        sortable: {
            mode: "multiple"
        }
    });
</script>
