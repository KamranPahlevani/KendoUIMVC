@{
    ViewBag.Title = "Prevent_selection_for_checkbox_cell";
}

<h2>Prevent_selection_for_checkbox_cell</h2>

<div id="grid"></div>
<script>
    $(function () {

        var grid = $("#grid").kendoGrid({
            dataSource: {
                data: [{ foo: 1 }, { foo: 2 }]
            },
            columns: [
              {
                  template: '<input type="checkbox" />'
              },
              "foo"
            ],
            selectable: "multiple cell"
        }).on("mouseup", ".k-grid-content tr > td:first-child", function () {
            grid.selectable.one("select", function (e) {
                e.preventDefault();
            });

        }).data("kendoGrid");
    });
</script>