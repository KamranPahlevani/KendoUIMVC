@{
    ViewBag.Title = "set_the_label_after_the_page_size_dropdown_list";
}

<h2>set_the_label_after_the_page_size_dropdown_list</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "productName" },
          { field: "category" }
        ],
        dataSource: [
          { productName: "Tea", category: "Beverages" },
          { productName: "Coffee", category: "Beverages" },
          { productName: "Ham", category: "Food" },
          { productName: "Bread", category: "Food" }
        ],
        pageable: {
            pageSize: 2,
            pageSizes: true,
            messages: {
                itemsPerPage: "data items per page"
            }
        }
    });
</script>
