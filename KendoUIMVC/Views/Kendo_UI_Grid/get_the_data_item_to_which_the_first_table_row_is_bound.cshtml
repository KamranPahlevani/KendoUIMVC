@{
    ViewBag.Title = "get_the_data_item_to_which_the_first_table_row_is_bound";
}

<h2>get_the_data_item_to_which_the_first_table_row_is_bound</h2>

<div id="grid"></div>
<input type="button" id="btnGetDataItem" value="Get Data Item"/>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: [
            { name: "Jane Doe", age: 30 },
            { name: "John Doe", age: 33 }
        ]
    });

    $('#btnGetDataItem').click(function () {
        var grid = $("#grid").data("kendoGrid");
        var data = grid.dataItem("tr:eq(1)");
        alert(data.name); // displays "Jane Doe"
    })
</script>
