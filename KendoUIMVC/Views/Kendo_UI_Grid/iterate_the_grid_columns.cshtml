@{
    ViewBag.Title = "iterate_the_grid_columns";
}

<h2>iterate_the_grid_columns</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ]
    });
    var grid = $("#grid").data("kendoGrid");
    for (var i = 0; i < grid.columns.length; i++) {
        alert(grid.columns[i].field); // displays "name" and then "age"
    }
</script>
