@{
    ViewBag.Title = "add_a_new_data_item";
}

<h2>add_a_new_data_item</h2>

<div id="grid"></div>
<input type="button" id="btnAddNewDataItem" value="Add New Data Item" />
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: {
            data: [
              { id: 1, name: "Jane Doe", age: 30 },
              { id: 2, name: "John Doe", age: 33 }
            ],
            schema: {
                model: { id: "id" }
            }
        },
        editable: true,
        toolbar: ["save"]
    });
    $('#btnAddNewDataItem').click(function () {
        var grid = $("#grid").data("kendoGrid");
        grid.addRow();
    })
</script>
