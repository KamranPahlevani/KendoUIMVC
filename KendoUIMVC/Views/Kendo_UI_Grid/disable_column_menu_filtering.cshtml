@{
    ViewBag.Title = "disable_column_menu_filtering";
}

<h2>disable_column_menu_filtering</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        columnMenu: {
            filterable: false
        },
        filterable: true,
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ]
    });
</script>
