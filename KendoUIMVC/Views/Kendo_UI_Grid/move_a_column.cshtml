@{
    ViewBag.Title = "move_a_column";
}

<h2>move_a_column</h2>

<div id="grid"></div>
<input type="button" id="btnMoveColumn" value="Move Column"/>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: [
            { name: "Jane Doe", age: 30 },
            { name: "John Doe", age: 33 }
        ]
    });

    $('#btnMoveColumn').click(function () {
        var grid = $("#grid").data("kendoGrid");
        grid.reorderColumn(1, grid.columns[0]);
    })
</script>
