@{
    ViewBag.Title = "configure_the_grid_toolbar";
}

<h2>configure_the_grid_toolbar</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        toolbar: [
          { name: "create" },
          { name: "save" },
          { name: "cancel" }
        ],
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: {
            data: [
              { id: 1, name: "Jane Doe", age: 30 },
              { id: 2, name: "John Doe", age: 33 },
            ],
            schema: {
                model: { id: "id" }
            }
        },
        editable: true
    });
</script>
