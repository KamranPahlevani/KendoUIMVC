@{
    ViewBag.Title = "specify_alternating_row_template_as_a_function";
}

<h2>specify_alternating_row_template_as_a_function</h2>

<div id="grid"></div>
<script id="alt-template" type="text/x-kendo-template">
    <tr data-uid="#= uid #">
        <td>
            <strong>#: name #</strong>
        </td>
        <td>
            <strong>#: age #</strong>
        </td>            
    </tr>
</script>
<script>
    $("#grid").kendoGrid({
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 },
          { name: "John Doe1", age: 31 },
          { name: "Jane Doe1", age: 34 }

        ],
        altRowTemplate: kendo.template($("#alt-template").html())
    });
</script>
