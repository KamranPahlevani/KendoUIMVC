@{
    ViewBag.Title = "subscribe_to_the_columnMenuInit_event_after_initialization";
}

<h2>subscribe_to_the_columnMenuInit_event_after_initialization</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" },
        ],
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ],
        columnMenu: true
    });
    var grid = $("#grid").data("kendoGrid");
    grid.bind("columnMenuInit", grid_columnMenuInit);

    function grid_columnMenuInit(e) {
        var menu = e.container.find(".k-menu").data("kendoMenu");
        var field = e.field;
        menu.append({ text: "Custom" });
        menu.bind("select", function (e) {
            if ($(e.item).text() == "Custom") {
                alert("Custom button for " + field);
            }
        });
    }

</script>
