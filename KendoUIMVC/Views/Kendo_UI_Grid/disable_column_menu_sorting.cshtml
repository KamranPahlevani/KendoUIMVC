@{
    ViewBag.Title = "disable_column_menu_sorting";
}

<h2>disable_column_menu_sorting</h2>
<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        columnMenu: {
            sortable: false
        },
        sortable: true,
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ]
    });
</script>
