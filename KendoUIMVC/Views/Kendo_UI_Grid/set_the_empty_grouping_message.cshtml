@{
    ViewBag.Title = "set_the_empty_grouping_message";
}

<h2>set_the_empty_grouping_message</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "productName" },
          { field: "category" }
        ],
        dataSource: [
          { productName: "Tea", category: "Beverages" },
          { productName: "Coffee", category: "Beverages" },
          { productName: "Ham", category: "Food" },
          { productName: "Bread", category: "Food" }
        ],
        groupable: {
            messages: {
                empty: "Drop columns here"
            }
        }
    });
</script>
