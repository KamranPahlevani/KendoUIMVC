@{
    ViewBag.Title = "set_the_column_width_as_a_string";
}

<h2>set_the_column_width_as_a_string</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name", width: "200px" },
          { field: "age" }
        ],
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ]
    });
</script>
