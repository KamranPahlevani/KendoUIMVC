@{
    ViewBag.Title = "set_delete_confirmation_text";
}

<h2>set_delete_confirmation_text</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" },
          { command: "destroy" }
        ],
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ],
        editable: {
            confirmation: "Are you sure that you want to delete this record?"
        }
    });
</script>
