@{
    ViewBag.Title = "set_the_group_header_template";
}

<h2>set_the_group_header_template</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          {
              field: "age",
              groupHeaderTemplate: "Age: #= value # total: #= count #"
          }
        ],
        dataSource: {
            data: [
              { name: "Jane Doe", age: 30 },
              { name: "John Doe", age: 30 }
            ],
            group: { field: "age", aggregates: [{ field: "age", aggregate: "count" }] }
        }
    });
</script>
