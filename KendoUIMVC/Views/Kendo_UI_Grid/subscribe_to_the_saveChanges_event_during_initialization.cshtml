@{
    ViewBag.Title = "subscribe_to_the_saveChanges_event_during_initialization";
}

<h2>subscribe_to_the_saveChanges_event_during_initialization</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" },
          { command: "destroy" }
        ],
        dataSource: {
            data: [
              { id: 1, name: "Jane Doe", age: 30 },
              { id: 2, name: "John Doe", age: 33 }
            ],
            schema: {
                model: { id: "id" }
            }
        },
        editable: true,
        saveChanges: function (e) {
            //e.preventDefault Function : If invoked the grid will not call the sync method of the data source.            
            //e.sender kendo.ui.Grid : The widget instance which fired the event.            
            if (!confirm("Are you sure you want to save all changes?")) {
                e.preventDefault();
            }
        },
        toolbar: ["save"]
    });
</script>
