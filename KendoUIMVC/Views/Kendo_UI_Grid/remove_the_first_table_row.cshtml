@{
    ViewBag.Title = "remove_the_first_table_row";
}

<h2>remove_the_first_table_row</h2>

<div id="grid"></div>
<input type="button" id="btnRemoveRow" value="Remove Row"/>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: {
            data: [
              { id: 1, name: "Jane Doe", age: 30 },
              { id: 2, name: "John Doe", age: 33 }
            ],
            schema: {
                model: { id: "id" }
            }
        },
        editable: true
    });

    $('#btnRemoveRow').click(function () {
        var grid = $("#grid").data("kendoGrid");
        grid.removeRow("tr:eq(1)");
    })
</script>
