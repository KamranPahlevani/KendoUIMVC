    function getData(length, delay) {
        var data = [];
        var sampleDate = new Date();
        for (var j = 1; j <= length; j++) {
            data[j - 1] = {
                id: j
            };
            data[j - 1].person = {
                fname: "First Name " + j,
                lname: "Last Name " + j,
                bdate: new Date(sampleDate.getTime() - j * 1000 * 60 * 60 * 24)
            }
        }
        var dataSource = {
            json: JSON.stringify({
                data: data
            }),
            delay: delay
        };
        debugger;
        return dataSource;
    }

