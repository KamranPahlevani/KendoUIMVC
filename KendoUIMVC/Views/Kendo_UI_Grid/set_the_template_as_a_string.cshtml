@{
    ViewBag.Title = "set_the_template_as_a_string";
}

<h2>set_the_template_as_a_string</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [{
            field: "name",
            template: "<strong>#: name # </strong>"
        }],
        dataSource: [{ name: "Jane Doe" }, { name: "John Doe" }]
    });
</script>
