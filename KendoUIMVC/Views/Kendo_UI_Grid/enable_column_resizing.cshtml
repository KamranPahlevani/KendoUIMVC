@{
    ViewBag.Title = "enable_column_resizing";
}

<h2>enable_column_resizing</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: [
          { name: "Jane Doe", age: 30 },
          { name: "John Doe", age: 33 }
        ],
        resizable: true
    });
</script>
