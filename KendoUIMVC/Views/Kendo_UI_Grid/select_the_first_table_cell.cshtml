@{
    ViewBag.Title = "select_the_first_table_cell";
}

<h2>select_the_first_table_cell</h2>

<div id="grid"></div>
<input type="button" id="btnSelectCell" value="Select Cell"/>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: [
            { name: "Jane Doe", age: 30 },
            { name: "John Doe", age: 33 }
        ],
        selectable: "cell"
    });

    $('#btnSelectCell').click(function () {
        var grid = $("#grid").data("kendoGrid");
        grid.select("td:eq(0)");
    })
</script>
