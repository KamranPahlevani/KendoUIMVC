@{
    ViewBag.Title = "set_the_number_less_than_operator";
}

<h2>set_the_number_less_than_operator</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" },
          { field: "age" }
        ],
        dataSource: {
            data: [
              { name: "Jane Doe", age: 30 },
              { name: "John Doe", age: 33 }
            ],
            schema: {
                model: {
                    fields: {
                        age: { type: "number" }
                    }
                }
            }
        },
        filterable: {
            operators: {
                number: {
                    lt: "Less than"
                }
            }
        }
    });
</script>
