@{
    ViewBag.Title = "Set_Cell_Format_During_Excel_export";
}

<h2>Set_Cell_Format_During_Excel_export</h2>

<div id="grid"></div>
<script src="~/Scripts/kendo/jszip.min.js"></script>
<script>
    $("#grid").kendoGrid({
        toolbar: ["excel"],
        excelExport: function (e) {
            debugger;
            var sheet = e.workbook.sheets[0];

            var dateCellIndex = -1;
            for (var rowIndex = 0; rowIndex < sheet.rows.length; rowIndex++) {
                var row = sheet.rows[rowIndex];
                switch (row.type) {
                    case 'header':
                        for (var i = 0; i < row.cells.length; i++) {
                            if (row.cells[i].value == 'date'){
                                dateCellIndex = i;
                                break;
                            }
                        }
                        break;
                    case 'data':
                        if (row.type == 'data')
                            row.cells[dateCellIndex].format = "yy-MM-dd hh:mm:ss"
                        break;
                }
            }
        },
        columns: [
          { field: "name" },
          { field: "age" },
          { field: "date" }
        ],
        dataSource: {
            data: [
              { name: "Jane Doe", age: 30, date: new Date() },
              { name: "John Doe", age: 33, date: new Date() }
            ],
            schema: {
                model: {
                    fields: {
                        date: { type: "date" },
                        name: { type: "string" },
                        age: { type: "number" }
                    }
                }
            }
        }
    });
    $("#export").click(function (e) {
        var grid = $("#grid").data("kendoGrid");
        grid.saveAsExcel();
    });
</script>