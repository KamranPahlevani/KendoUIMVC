@{
    ViewBag.Title = "set_the_template_as_a_function_which_returns_a_string";
}

<h2>set_the_template_as_a_function_which_returns_a_string</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [{
            field: "name",
            template: function (dataItem) {
                return "<strong>" + kendo.htmlEncode(dataItem.name) + "</strong>";
            }
        }],
        dataSource: [{ name: "Jane Doe" }, { name: "John Doe" }]
    });
</script>
