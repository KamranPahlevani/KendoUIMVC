@{
    ViewBag.Title = "set_the_string_starts_with_operator";
}

<h2>set_the_string_starts_with_operator</h2>

<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        columns: [
          { field: "name" }
        ],
        dataSource: [
          { name: "Jane Doe" },
          { name: "John Doe" }
        ],
        filterable: {
            operators: {
                string: {
                    startswith: "Starts"
                }
            }
        }
    });
</script>
