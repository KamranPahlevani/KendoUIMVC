@{
    ViewBag.Title = "value";
}

<h2>value</h2>

<input type="text" id="dropdownlist" name="dropdownlist" />
<input type="button" id="btnGetValue" value="Get Value"/>
<input type="button" id="btnSetValue" value="Set Value"/>


 <script>
     $("#dropdownlist").kendoDropDownList({
         dataSource: new kendo.data.DataSource({
             transport: {
                 read: {
                     url: "@Url.Action("GetProducts", "Kendo_Data_DataSource")",
                     dataType: "json"
                 },
             }
         }),
         dataTextField: "ProductName",
         dataValueField: "ProductID",
     });

     var dropdownlist = $('#dropdownlist').data('kendoDropDownList');

     $('#btnGetValue').click(function () {
         alert(dropdownlist.value());
     })

     $('#btnSetValue').click(function () {
         dropdownlist.value('3');//looks for item which has value '3'
     })

 </script>

