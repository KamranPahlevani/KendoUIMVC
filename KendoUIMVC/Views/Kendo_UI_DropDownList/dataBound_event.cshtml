@{
    ViewBag.Title = "dataBound_event";
}

<h2>dataBound_event</h2>

<input type="text" id="dropdownlist" name="dropdownlist" />

 <script>
     $("#dropdownlist").kendoDropDownList({
         dataSource: new kendo.data.DataSource({
             transport: {
                 read: {
                     url: "@Url.Action("GetProducts", "Kendo_Data_DataSource")",
                     dataType: "json"
                 },
             }
         }),
         dataTextField: "ProductName",
     });

     var dropdownlist = $('#dropdownlist').data('kendoDropDownList');
     dropdownlist.bind('dataBound', function () {
         alert('dataBound event');
     })
 </script>

