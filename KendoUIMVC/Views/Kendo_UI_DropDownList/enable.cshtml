@{
    ViewBag.Title = "enable";
}

<h2>enable</h2>

<input type="text" id="dropdownlist" name="dropdownlist" />
<input type="button" id="btnEnable" value="Enable"/>
<input type="button" id="btnDisable" value="Disable"/>

 <script>
     $("#dropdownlist").kendoDropDownList({
         dataSource: new kendo.data.DataSource({
             transport: {
                 read: {
                     url: "@Url.Action("GetProducts", "Kendo_Data_DataSource")",
                     dataType: "json"
                 },
             }
         }),
         dataTextField: "ProductName",
     });

     var dropdownlist = $('#dropdownlist').data('kendoDropDownList');

     $('#btnEnable').click(function () {
         dropdownlist.enable(true);
     })

     $('#btnDisable').click(function () {
         dropdownlist.enable(false);
     })

 </script>

