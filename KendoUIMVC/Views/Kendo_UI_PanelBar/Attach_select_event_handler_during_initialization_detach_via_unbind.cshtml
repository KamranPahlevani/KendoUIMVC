@{
    ViewBag.Title = "Attach_select_event_handler_during_initialization_detach_via_unbind";
}

<h2>Attach_select_event_handler_during_initialization_detach_via_unbind</h2>

<ul id="panelbar">
    <li>
        Item 1
        <ul>
            <li>Sub Item 1</li>
            <li>Sub Item 2</li>
            <li>Sub Item 3</li>
        </ul>
    </li>
    <li>
        Item 2
        <ul>
            <li>Sub Item 1</li>
            <li>Sub Item 2</li>
            <li>Sub Item 3</li>
        </ul>
    </li>
</ul>
<script>
    // event handler for select
    var onSelect = function (e) {
        // access the selected item via e.item (HTMLElement)
        alert('select event is fired!');
        // detach select event handler via unbind()
        $("#panelbar").data("kendoPanelBar").unbind("select", onSelect);
    };

    // attach select event handler during initialization
    var panelBar = $("#panelbar").kendoPanelBar({
        select: onSelect
    }).data("kendoPanelBar");
</script>

