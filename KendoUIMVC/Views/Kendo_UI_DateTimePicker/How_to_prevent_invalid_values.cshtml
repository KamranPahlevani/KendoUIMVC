@{
    ViewBag.Title = "How_to_prevent_invalid_values";
}

<h2>How_to_prevent_invalid_values</h2>

<div id="example">
    <div class="demo-section k-header" style="width: 400px;">
        <h4>Select date</h4>
        <input id="datetimepicker" style="width: 200px;" />
    </div>
    <div class="box">
        <h4>Console log</h4>
        <div class="console"></div>
    </div>
    <script>
        $(document).ready(function () {
            function onOpen() {
                alert("Open");
            }

            function onClose() {
                alert("Close");
            }

            function onChange() {
                alert("Change :: " + kendo.toString(this.value(), 'd'));

                //uncomment if you do not want to wire the input change event
                /*if (this.value() === null) {
                             this.value("");
                            }*/
            }

            $("#datetimepicker").kendoDateTimePicker({
                change: onChange,
                close: onClose,
                open: onOpen,
                value: new Date()
            });

            //if you don't want to use widget change event
            $("#datetimepicker").on("change", function () {
                debugger;
                var input = $(this);
                var widget = input.data("kendoDateTimePicker");

                if (widget && widget.value() === null && input.val()) {
                    widget.value("");
                }
            });
        });
    </script>
</div>