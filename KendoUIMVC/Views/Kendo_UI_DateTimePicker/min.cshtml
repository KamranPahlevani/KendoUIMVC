@{
    ViewBag.Title = "min";
}

<h2>min</h2>

<input id="dateTimePicker" name="dateTimePicker" style="width: 200px" type="date"  />

<script src="~/Scripts/kendo/2013.3.1213/cultures/kendo.culture.en-US.min.js"></script>
<script>
    $("#dateTimePicker").kendoDateTimePicker({
    });

    // get a reference to the dateTimePicker widget
    var dateTimePicker = $("#dateTimePicker").data("kendoDateTimePicker");
    // set the min date to Jan 1st, 2011 12:00 AM
    dateTimePicker.min(new Date(2011, 0, 1));
</script>

