@{
    ViewBag.Title = "open";
}

<h2>open</h2>

<input id="dateTimePicker" name="dateTimePicker" style="width: 150px" type="date"  />
<input type="button"  id="btnOpenDatePicker" value="Open DatePicker"/> 
<input type="button"  id="btnOpenTimePicker" value="Open TimePicker"/> 


<script src="~/Scripts/kendo/2013.3.1213/cultures/kendo.culture.en-US.min.js"></script>
<script>
    $("#dateTimePicker").kendoDateTimePicker({
    });

    var dateTimePicker = $('#dateTimePicker').data('kendoDateTimePicker');

    $('#btnOpenDatePicker').click(function () {
        dateTimePicker.open('date');
    })

    $('#btnOpenTimePicker').click(function () {
        dateTimePicker.open('time');
    })

</script>

