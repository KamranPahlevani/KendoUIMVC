@{
    ViewBag.Title = "month_content";
}

<h2>month_content</h2>

<style>
    .exhibition {
        background-color: #fff;
        width:26px;
        height:24px;
        display: inline-block;
        vertical-align: middle;
        text-align:center;
    }

    .party {
        background-color: #70c114;
        width:26px;
        height:24px;
        display: inline-block;
        vertical-align: middle;
        text-align:center;
    }

</style>

<input id="dateTimePicker" name="dateTimePicker" style="width: 200px" type="date"  />

<script src="~/Scripts/kendo/2013.3.1213/cultures/kendo.culture.en-US.min.js"></script>

 <script>
     function isInArray(date) {
        var isInRange = null;
        isInRange = date.getDate() < 10 ? true : false;
        return isInRange;
     }

     $(document).ready(function () {
         $("#dateTimePicker").kendoDateTimePicker({
             month: {
                 content: '# if (isInArray(data.date)) { #' +
                                  '<div class="exhibition">#= data.value #</div>' +
                          '# }' +
                          'else { #' +
                                  '<div class="party">#= data.value #</div>' +
                                 '# }' +
                          '#' 
             }
         });
     })
 </script>