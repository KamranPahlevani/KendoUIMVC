@{
    ViewBag.Title = "start";
}

<h2>start</h2>

<input id="datePicker" name="datePicker" style="width: 150px" type="date"  />

<script src="~/Scripts/kendo/2013.3.1213/cultures/kendo.culture.en-US.min.js"></script>
<script>

    @*"month"
    shows the days of the month
    "year"
    shows the months of the year
    "decade"
    shows the years of the decade
    "century"
    shows the decades from the centery
    *@
    $("#datePicker").kendoDatePicker({
        start: "decade" // the datePicker will start with a decade display
    });

</script>

