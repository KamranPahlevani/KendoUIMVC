@{
    ViewBag.Title = "subscribe_to_the_layoutChange_event_during_initialization";
}

<h2>subscribe_to_the_layoutChange_event_during_initialization</h2>

<div id="splitter">
    <div>Pane A</div>
    <div>Pane B</div>
</div>
<script>
    $("#splitter").kendoSplitter({
        panes: [{ collapsible: true }, {}],
        layoutChange: function (e) {
            console.log("Splitter layout has changed");
        }
    });
</script>