@{
    ViewBag.Title = "subscribe_to_the_contentLoad_event_during_initialization";
}

<h2>subscribe_to_the_contentLoad_event_during_initialization</h2>

<div id="splitter">
    <div>Pane A</div>
    <div>Pane B</div>
</div>
<script>
    $("#splitter").kendoSplitter({
        panes: [{ content: 'foo' }, {}],
        contentLoad: function (e) {
            console.log($(e.pane).html() + " has been loaded");
        }
    });
</script>