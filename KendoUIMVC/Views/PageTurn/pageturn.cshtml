@{
    ViewBag.Title = "pageturn";
}

<h2>pageturn</h2>

<style>
    #container {
        position: relative;
        width: 200px;
        height: 200px;
    }

    #foo {
        position: absolute;
        width: 200px;
        height: 200px;
        background: blue;
    }

    #bar {
        position: absolute;
        width: 200px;
        height: 200px;
        background: red;
    }
</style>

<div id="container">
    <div id="bar">Page 2</div>
    <div id="foo">Page 1</div>
</div>

<script>
    kendo.fx($("#container")).pageturn("horizontal", $("#bar"), $("#foo")).play();
    //kendo.fx($("#container")).pageturnHorizontal($("#foo"), $("#bar")).play();
</script>
