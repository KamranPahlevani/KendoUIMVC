@{
    ViewBag.Title = "kendoToggleClass";
}

<h2>kendoToggleClass</h2>

<style>
    .BoxStyle {
        width:200px;
        height:200px;
        background-color:green
    }

    .BorderStyle {
        border:double;       
    }

    .Default {
        width:400px;
        height:400px;
        background-color:yellow;
    }
</style>

<div id="box" class="Default">
</div>

<span><input type="button" value="toggle class" onclick="toggleClass();"/></span>

<script>
    var options = new Object({
        duration: 400,
        //exclusive String (default: "all") The property on which to apply the animation.
        exclusive: 'all',
        //ease String (default: "ease-out") The animation easing.
        ease: 'ease-in'
    })

    function toggleClass() {
        /*toggle Boolean
        A boolean flag to control the toggle - true to add or false to remove the CSS class. 
        If omitted the method will assume the opposite state should be toggled.*/
        $('#box').kendoToggleClass('Default', options)
                 .kendoToggleClass('BoxStyle BorderStyle', options);
    }
</script>
